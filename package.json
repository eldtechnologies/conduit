{
  "name": "conduit",
  "version": "1.2.0",
  "description": "Lightweight, secure multi-channel communication proxy for sending emails, SMS, push notifications, and webhooks from frontend applications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "generate-key": "tsx scripts/generate-api-key.ts"
  },
  "keywords": [
    "email",
    "sms",
    "push-notifications",
    "webhooks",
    "api-proxy",
    "communication",
    "resend",
    "twilio",
    "firebase"
  ],
  "author": "ELD Technologies SL",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "hono": "^4.10.3",
    "isomorphic-dompurify": "^2.16.0",
    "resend": "^4.0.0",
    "vite": "^7.1.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
